{
    "manifest_version": 2,

    "name": "Magic Search | Supercharge your Search",
    "description": "Supercharge your Googling Experience -- be faster, smarter with the best search engine.",
    "version": "1.1.1",

    "browser_action": {
      "default_icon": "plexor.png"
    },

    "author": "Polyx Studio",
    "short_name": "Magic Search",

    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    },

    "content_scripts": [
        {
            "matches": ["*://www.google.com/sear*"],
            "css": ["px.css"],
            "js": ["injected.js"],
            "run_at": "document_start"
        }
    ],

    "permissions": [
      "activeTab",
      "storage"
    ]
}
